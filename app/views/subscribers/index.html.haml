%div{class: 'panel panel-default'}
  .panel-heading
    %h3.panel-title
      .clearfix
        Subscriber Registration
        .pull-right
          %a{href: '/subscribers/new'}
            New Subscriber
  .panel-body
    %table{class: 'table table-striped'}
      %thead
        %tr
          %th Control Number
          %th ID Number
          %th{colspan: '2'} Subscriber
          %th{colspan: '3'} Actions
      %tbody
        - @subscribers.reverse.each do |subscriber|
          %tr
            %td= subscriber.controlNumber
            %td= subscriber.idNumber
            %td= subscriber.firstName
            %td= subscriber.lastName
            %td= link_to 'Show', subscriber_path(subscriber)
            %td= link_to 'Edit', edit_subscriber_path(subscriber)
